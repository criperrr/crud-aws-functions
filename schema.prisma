  generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["rhel-openssl-1.0.x"]
  }


  datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
  }

  model remedio {
    id                 Int          @id @default(autoincrement())
    nome               String       @db.VarChar(255)
    principio_ativo    String?      @db.VarChar(255)
    concentracao       String?      @db.VarChar(100)
    forma_farmaceutica String?      @db.VarChar(100)
    estoque_inicial    Int?
    observacoes        String?
    descricao          String?
    agendamento        agendamento?
  }

  model agendamento {
    remedio_id   Int          @id
    slot         slot_horario
    dosagem      String       @db.VarChar(255)
    data_inicio  DateTime     @db.Date
    duracao_dias Int
    remedio      remedio      @relation(fields: [remedio_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_remedio")
  }

  enum slot_horario {
    manha
    tarde
    noite
  }